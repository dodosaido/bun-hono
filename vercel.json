{
    "version": 2,
    "functions": {
        "src/index.ts": {
            "runtime": "edge",
            "includeFiles": "views/**"
        }
    },
    "builds": [
        {
            "src": "src/index.ts",
            "use": "@vercel/bun",
            "config": {
                "includeFiles": "views/**"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/index.ts"
        }
    ]
}
